<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppPicking.Views.PageRemoveArtigos">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Editar Artigos" 
                   TextColor="Black"
                   HorizontalTextAlignment="Center"
                   FontSize="Title"/>

            <Entry Keyboard="Numeric" TextColor="Black" x:Name="txtID"
                   PlaceholderColor="DarkGray" Placeholder="ID do Artigo" Margin="0,10,0,0"/>

            <Entry TextColor="Black" x:Name="txtNome"
                   PlaceholderColor="DarkGray" Placeholder="Nome do Artigo" Margin="0,10,0,0"/>

            <Entry TextColor="Black" x:Name="txtCod_Barras"
                   PlaceholderColor="DarkGray" Placeholder="Codigo de barras" Margin="0,10,0,10"/>

            <Button IsVisible="false" BackgroundColor="Black" Text="Eliminar"
                    x:Name="RemoveButton"
                    Clicked="RemoveButton_Clicked"/>

            <Button BackgroundColor="Black" Text="Procurar"
                    x:Name="searchButton"
                    Clicked="searchButton_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>