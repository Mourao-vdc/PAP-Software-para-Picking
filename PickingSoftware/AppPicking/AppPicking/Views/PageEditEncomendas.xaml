<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppPicking.Views.PageEditEncomendas">
    <ContentPage.Content>
        <StackLayout Margin="20,20,20,20">
            <Label Text="Editar Pedido"
                   TextColor="Black"
                   HorizontalTextAlignment="Center"
                   FontSize="Title"/>

            <!--<Picker x:Name="txtID" SelectedIndexChanged="txtID_SelectedIndexChanged" Title="ID da encomenda" FontSize="18" TitleColor="DarkGray" TextColor="Black"/>-->

            <Entry x:Name="txtID" IsReadOnly="False" Placeholder="ID da encomenda" FontSize="18" PlaceholderColor="DarkGray" TextColor="Black"/>

            <Picker x:Name="txtIDUtilizador" Title="Nome do utilizador" FontSize="18" TitleColor="DarkGray" TextColor="Black"/>

            <DatePicker x:Name="dpData" TextColor="Black" FontSize="18"/>

            <Button IsVisible="true" BackgroundColor="Black" Text="Editar"
                    x:Name="EditButton"
                    Clicked="EditButton_Clicked"/>

            <!--<Button BackgroundColor="Black" Text="Procurar"
                    x:Name="searchButton"
                    Clicked="searchButton_Clicked"/>-->
        </StackLayout>
    </ContentPage.Content>
</ContentPage>