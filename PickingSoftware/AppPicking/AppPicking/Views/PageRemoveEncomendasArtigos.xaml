<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppPicking.Views.PageRemoveEncomendasArtigos">
    <ContentPage.Content>
        <StackLayout Margin="20,20,20,20">
            <Label Text="Remover Encomendas" 
                   TextColor="Black"
                   HorizontalTextAlignment="Center"
                   FontSize="Title"/>

            <Picker x:Name="txtID" Title="ID" FontSize="18" TitleColor="DarkGray" TextColor="Black" SelectedIndexChanged="txtID_SelectedIndexChanged" Margin="0,10,0,0"/>

            <Picker x:Name="txtIDEncomenda" Title="ID do Pedido" FontSize="18" TitleColor="DarkGray" TextColor="Black" Margin="0,10,0,0"/>

            <Picker x:Name="txtIDArtigo" Title="ID do Artigo" FontSize="18" TitleColor="DarkGray" TextColor="Black" Margin="0,10,0,0"/>

            <Entry Keyboard="Numeric" IsReadOnly="True" TextColor="Black" x:Name="txtQuantArtigos"
                   PlaceholderColor="DarkGray" Placeholder="Quantidade de Artigos" Margin="0,10,0,0"/>

            <Entry TextColor="Black" IsReadOnly="True" x:Name="txtCodBarras"
                   PlaceholderColor="DarkGray" Placeholder="Código de barras" Margin="0,10,0,0"/>

            <Button BackgroundColor="Black" Text="Procurar"
                    x:Name="searchButton"
                    Clicked="searchButton_Clicked"/>

            <Button IsVisible="false" BackgroundColor="Black" Text="Eliminar"
                    x:Name="RemoveButton"
                    Clicked="RemoveButton_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>