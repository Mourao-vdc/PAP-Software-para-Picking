<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppPicking.Views.PageRemoveEncomendas">
    <ContentPage.Content>
        <StackLayout Margin="20,20,20,20">
            <Label Text="Remover Pedido"
                   TextColor="Black"
                   HorizontalTextAlignment="Center"
                   FontSize="Title"/>

            <Picker x:Name="txtID" Title="ID do Pedido" FontSize="18" TitleColor="DarkGray" TextColor="Black"/>

            <Picker x:Name="txtIDUtilizador" Title="ID do Utilizador" FontSize="18" TitleColor="DarkGray" TextColor="Black"/>

            <DatePicker x:Name="dpData" TextColor="Black" FontSize="18"/>

            <Button IsVisible="false" BackgroundColor="Black" Text="Remover"
                    x:Name="RemoveButton"
                    Clicked="RemoveButton_Clicked"/>

            <Button BackgroundColor="Black" Text="Procurar"
                    x:Name="searchButton"
                    Clicked="searchButton_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>