<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppPicking.Views.PageAddEncomendas">
    <ContentPage.Content>
        <StackLayout Margin="20,20,20,20">
            <Label Text="Adicionar Pedido" 
                   TextColor="Black"
                   HorizontalTextAlignment="Center"
                   FontSize="Title"/>

            <Picker x:Name="txtIDUtilizador" Title="Nome do Utilizador" FontSize="18" TitleColor="DarkGray" TextColor="Black"/>

            <DatePicker x:Name="dpData" Format="dd/MM/yyyy" TextColor="Black" FontSize="18"/>

            <Button BackgroundColor="Black" Text="Adicionar"
                    x:Name="AddButton"
                    Clicked="AddButton_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>